
    {{>layout/header}}
    <div class="container">
        <h1>記事作成</h1>
        <div class="col-md-12" style="">
            <div class="col-md-4">
                <form>
                    <div class="form-group">
                        <label for="title">タイトル</label>
                        <input type="text" class="form-control" id="title" placeholder="タイトルを入力してください">
                    </div>

                    <div class="form-group">
                        <label for="author">作成者</label>
                        <input type="text" class="form-control" id="author" placeholder="作成者を入力してください">
                    </div>

                    <div class="form-group">
                        <label for="content">内容</label>
                        <textarea class="form-control" id="content" placeholder="内容を入力してください"></textarea>
                    </div>
                </form>
                <a href="/" role="button" class="btn btn-secondary">キャンセル</a>
                <button type="button" class="btn btn-primary" id="btn-save">投稿</button>
            </div>
        </div>
    </div>
    {{>layout/footer}}
