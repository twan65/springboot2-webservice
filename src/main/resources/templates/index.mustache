
    {{>layout/header}}

    <h1>Spring bootで始めるWebService</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">投稿</a>
            </div>
        </div>

        <br>

        <table class="table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>No</th>
                <th>タイトル</th>
                <th>作成者</th>
                <th>内容</th>
                <th>更新日</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{content}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>

    {{>layout/footer}}